<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:elevation="@dimen/margin_5dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/margin_5dp"
    card_view:cardElevation="@dimen/margin_5dp">

    <LinearLayout
        android:id="@+id/ll_profile_card"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_adapter"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_5dp"
        android:orientation="vertical"
        android:padding="@dimen/margin_5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:weightSum="5.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="2"
                android:text="@string/courseCode"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight=".2"
                android:gravity="center"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_course_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="3.3"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
        </TableRow>

        <!--        <TextView-->
        <!--            android:id="@+id/tv_mobile_no"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:text=""-->
        <!--            android:textAppearance="?android:attr/textAppearanceSmall" />-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:weightSum="5.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="2"
                android:text="@string/courseName"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight=".2"
                android:gravity="center"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="3.3"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
        </TableRow>

        <!--        <TextView-->
